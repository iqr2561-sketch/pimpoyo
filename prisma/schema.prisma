// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id          String    @id @default(cuid())
  name        String
  cuit        String    @unique
  address     String?
  phone       String?
  email       String?
  logoUrl     String?
  users       User[]
  clients     Client[]
  documents   Document[]
  products    Product[]
  stock       Stock[]
  sales       Sale[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Client {
  id        String     @id @default(cuid())
  name      String
  cuit      String?
  address   String?
  phone     String?
  email     String?
  companyId String
  company   Company    @relation(fields: [companyId], references: [id])
  documents Document[]
  sales     Sale[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String?
  price       Float
  cost        Float?   // Costo de compra
  category    String?
  unit        String   @default("UN") // UN, KG, L, etc.
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  stock       Stock?
  saleItems   SaleItem[]
  docItems    DocumentItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Stock {
  id          String   @id @default(cuid())
  productId   String   @unique
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity    Float    @default(0)
  minQuantity Float    @default(0) // Stock mínimo
  maxQuantity Float?   // Stock máximo
  location    String?  // Ubicación en almacén
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  movements   StockMovement[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StockMovement {
  id          String   @id @default(cuid())
  stockId     String
  stock       Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  type        String   // IN, OUT, ADJUSTMENT
  quantity    Float
  reason      String?  // Motivo del movimiento
  reference   String?  // Referencia (ID de venta, compra, etc.)
  userId      String?
  createdAt   DateTime @default(now())
}

model DocumentItem {
  id           String    @id @default(cuid())
  description  String
  quantity     Float
  unitPrice    Float
  productId    String?   // Opcional: relacionado con producto
  product      Product?  @relation(fields: [productId], references: [id])
  documentId   String
  document     Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  type        String   // INVOICE, REMITO, QUOTE
  number      String   @unique
  date        DateTime @default(now())
  subtotal    Float
  tax         Float    @default(0)
  total       Float
  status      String   @default("DRAFT") // DRAFT, SENT, PAID, CANCELLED
  notes       String?
  pdfUrl      String?
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  items       DocumentItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}

model Sale {
  id          String     @id @default(cuid())
  number      String     @unique
  date        DateTime   @default(now())
  subtotal    Float
  tax         Float      @default(0)
  total       Float
  status      String     @default("PENDING") // PENDING, COMPLETED, CANCELLED
  paymentMethod String?   // CASH, CARD, TRANSFER, etc.
  clientId    String?
  client      Client?    @relation(fields: [clientId], references: [id])
  companyId   String
  company     Company    @relation(fields: [companyId], references: [id])
  items       SaleItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt()
}

model SaleItem {
  id          String   @id @default(cuid())
  saleId      String
  sale        Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  quantity    Float
  unitPrice   Float
  subtotal    Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}

